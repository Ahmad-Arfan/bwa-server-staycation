<!-- Modal -->
<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" value="<%= item.title %>" name="title" placeholder="Enter name" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" value="<%= item.price %>" name="price" placeholder="Enter price" required>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" name="city" value="<%= item.city %>" placeholder="Enter name" required />
                </div>
                <div class="form-group">
                    <label for="country">Category</label>
                    <select class="form-control" name="categoryId">
                        <option value="<%= item.categoryId.id %>">--- <%= item.categoryId.name %> ---</option>
                        <% for(let i = 0; i < category.length; i++){ %>
                            <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Image</label>
                    <input type="file" class="form-control" id="name" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="about" name="about" class="form-control"><%= item.description %></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
    </div>
  </div>
</div>